{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "[DEV] CloneKit-Open in VS Code",
  "description": "One-click clone & open any GitHub, GitLab or Bitbucket repository in Visual Studio Code",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "32": "icons/32.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  },
  "action": {},
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "author": "itsbrex",
  "homepage_url": "https://github.com/itsbrex/clonekit-open-in-vscode",
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*", "https://gitlab.com/*/*", "https://bitbucket.org/*/*", "https://dev.azure.com/*/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["https://github.com/", "https://gitlab.com/", "https://bitbucket.org/", "https://dev.azure.com/"],
  "permissions": ["declarativeContent", "storage", "declarativeNetRequest", "tabs"],
  "web_accessible_resources": [
    {
      "resources": ["open.html", "open.js"],
      "matches": ["https://*/*"]
    }
  ]
}